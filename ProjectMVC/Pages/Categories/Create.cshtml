@page
@model ProjectMVC.Pages.Categories.CreateModel
@{
}
<h1> Create Category</h1>
<div class=" row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="_Categories.CategoryName" class="control-label"></label>
                <input asp-for="_Categories.CategoryName" class="form-control" />
                <span asp-validation-for="_Categories.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_Categories.CategoryDescription" class="control-label"></label>
                <input asp-for="_Categories.CategoryDescription" class="form-control" />
                <span asp-validation-for="_Categories.CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
