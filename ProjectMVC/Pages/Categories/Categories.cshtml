@page
@model ProjectMVC.Pages.Categories.CategoriesModel
@{
}

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Mod"))
    {
    <a class="btn btn-success" asp-page="Create">Create new Category</a>
    }
    <a class="btn btn-warning" asp-page="/Filters/Filters">Filter</a>
</p>

<h1>Currently available categories</h1>
<table class=" table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories[0].CategoryDescription)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td scope="col">
                    @Html.DisplayFor(modelitem => item.CategoryName)
                </td>
                <td scope="col">
                    @Html.DisplayFor(modelitem => item.CategoryDescription)
                </td>

            </tr>
        }
    </tbody>
</table>