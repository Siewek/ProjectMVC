@page
@model ProjectMVC.Pages.Authors.CreateModel
@{
}

<h1>Add Author</h1>
<div class=" row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="_author.AuthorName" class="control-label"></label>
                <input asp-for="_author.AuthorName" class="form-control" />
                <span asp-validation-for="_author.AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_author.AuthorLastName" class="control-label"></label>
                <input asp-for="_author.AuthorLastName" class="form-control" />
                <span asp-validation-for="_author.AuthorLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>