@page
@model ProjectMVC.Pages.Authors.DetailsModel
@{
}

<h1>@Model.Authors[0].AuthorName @Model.Authors[0].AuthorLastName 's books: </h1><br />
<table class="table table-hover">
    <thead>
        <tr>
            <td>
                ISBN
            </td>
            <td>
                Title
            </td>
            <td>
                additional info
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books)
        {
        <tr>
            <td>
                @Html.DisplayFor(x => item.BookID)
            </td>
            <td>
                @Html.DisplayFor(x => item.Title)
            </td>
            <td>
                <a class="btn btn-warning" asp-page="/Books/Details" asp-route-id="@item.BookID">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<br />
<a class="btn btn-warning" asp-page="/Authors/Authors">Back</a>