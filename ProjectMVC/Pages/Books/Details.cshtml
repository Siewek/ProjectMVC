@page
@model ProjectMVC.Pages.Books.DetailsModel
@{ ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Details</h1>

<div>
    <h4> Book </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Title)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.book.Title)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Description)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.book.Description)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Ammount)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.book.Ammount)
        </dt>
        <dt class="col-sm-2">
            Authors:
        </dt>
        <dt class="col-sm-10">
            @foreach (var item in Model.Authors)
            {
                <div>
                    @Html.DisplayFor(modelitem => item.AuthorName)  @Html.DisplayFor(modelitem => item.AuthorLastName)
                </div>
            }
        </dt>
        <dt class="col-sm-2">
            Tags:
        </dt>
        <dt class="col-sm-10">
            @foreach (var item in Model.Tags)
            {
                <div>
                    @Html.DisplayFor(modelitem => item.TagName)
                </div>
            }
        </dt>
        <dt class="col-sm-2">
            Category:
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.Categories[0].CategoryName)
        </dt>
    </dl>
</div>