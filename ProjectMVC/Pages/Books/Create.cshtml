@page
@model ProjectMVC.Pages.Books.CreateModel
@{
}
<div class=" row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="_Books.Title" class="control-label"></label>
                <input asp-for="_Books.Title" class="form-control" />
                <span asp-validation-for="_Books.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_Books.Description" class="control-label"></label>
                <input asp-for="_Books.Description" class="form-control" />
                <span asp-validation-for="_Books.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_Books.TableOfContents" class="control-label"></label>
                <input asp-for="_Books.TableOfContents" class="form-control" />
                <span asp-validation-for="_Books.TableOfContents" class="text-danger"></span>
            </div>
            <div>
                <h4>Category</h4>
                <input type="text" name="cat" />
            </div>
            <div>
                <h4>Amount in stock</h4>
                <input type="number" name="am" min="0"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
