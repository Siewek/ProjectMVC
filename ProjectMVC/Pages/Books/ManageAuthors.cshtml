@page
@model ProjectMVC.Pages.Books.ManageAuthorsModel
@{
}
<a class="btn btn-warning" asp-page="./ManageInfo" asp-route-id="@Model.Books[0].BookID">Back</a><br />
<h1>List of Authors who didn't write the book:</h1><br />
<table class="table table-hover">
    <thead>
        <tr>
            <td>
                Authors Name
            </td>
            <td>
                Authors Last Name
            </td>
            <td>

            </td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Authors2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.AuthorLastName)
                </td>
                <td>
                    <form method="post">
                        <input type="text" hidden value=@item.AuthorID name="authid" />
                        <input type="submit" value="Add Author" name="action" class="btn btn-success" />
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
<h1>List of authors who wrote the book:</h1><br />
<table class="table table-hover">
    <thead>
        <tr>
            <td>
                Tag Name
            </td>
            <td>
            </td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Authors)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.AuthorLastName)
            </td>
            <td>
                <form method="post">
                    <input type="text" hidden value="remove" name="action" />
                    <input type="text" hidden value=@item.AuthorID name="authid" />
                    <input type="submit" value="Remove Author" name="action" class="btn btn-danger" />
                </form>
            </td>
        </tr>
        }

    </tbody>
</table>