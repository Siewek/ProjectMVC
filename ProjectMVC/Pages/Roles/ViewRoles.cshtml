@page
@model ProjectMVC.Pages.Roles.ViewRolesModel
@{
}
<style>
    td {
        padding: 5px;
        text-align: center;
    }
</style>
<h1>List of Roles</h1>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
            <td><a class="btn btn-success" asp-page="Create">Create</a></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
                <td>
                    <a class=" btn btn-warning" asp-page="AssignRoles" asp-route-id="@role.Id">Manage</a>
                </td>
            </tr>

        }
    </tbody>
</table>