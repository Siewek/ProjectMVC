            </div>
            <div class="form-group">
                <label asp-for="_roles.NormalizedName" class="control-label"></label>
                <input asp-for="_roles.NormalizedName" class="form-control" />
                <span asp-validation-for="_roles.NormalizedName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
